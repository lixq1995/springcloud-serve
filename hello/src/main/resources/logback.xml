<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <springProperty scope = "context" name="logback.logPath" source="logback.logPath"/>
    <springProperty scope = "context" name="logback.maxFileSize" source="logback.maxFileSize"/>

    <property resource="\application.yml"/>
    <property resource="\application.properties"/>

    <!--debug日志配置-->
    <appender name="DEBUG_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logback.logPath}/debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.logPath}/debug.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!--文件最大保留30天，总保留日志文件5G-->
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!--<maxFileSize>${logback.maxFileSize}</maxFileSize>-->
                <maxFileSize>10GB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <!--日志打印格式，转成字符串输出-->
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [${logback.systemId}][%thread] [%logger:%line] %msg%n
                <!--%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%thread] [%logger:%line] %msg%n-->
            </pattern>
        </encoder>
    </appender>

    <!--info日志配置-->
    <appender name="INFO_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logback.logPath}/info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.logPath}/info.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!--文件最大保留30天-->
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10GB</maxFileSize>
                <!--<maxFileSize>${logback.maxFileSize}</maxFileSize>-->
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!--日志打印格式-->
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [${logback.systemId}][%thread] [%logger:%line] %msg%n
                <!--%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%thread] [%logger:%line] %msg%n-->
            </pattern>
        </encoder>
    </appender>

    <!--error日志配置-->
    <appender name="ERROR_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logback.logPath}/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.logPath}/error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!--<maxFileSize>${logback.maxFileSize}</maxFileSize>-->
                <maxFileSize>10GB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!--日志打印格式-->
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [${logback.systemId}][%thread] [%logger:%line] %msg%n
                <!--%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%thread] [%logger:%line] %msg%n-->
            </pattern>
        </encoder>
    </appender>

    <!--控制台日志-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%thread] [%logger:%line] %msg%n
            </pattern>
        </encoder>
    </appender>

    <!--用来设置某一个包或者某一个类的日志打印级别-->
    <logger name="org.springframework" level="WARN" />
    <logger name="org.hibernate" level="DEBUG" />
    <logger name="java.sql.Connection" level="DEBUG" />
    <logger name="java.sql.Statement" level="DEBUG" />
    <logger name="java.sql.ResultSet" level="DEBUG" />
    <logger name="java.sql.PreparedStatement" level="DEBUG" />
    <logger name="org.apache.http" level="OFF" />
    <logger name="org.apache.http.wire" level="OFF" />
    <logger name="org.apache.http.impl" level="OFF" />
    <logger name="com.zaxxer.hikari" level="OFF" />
    <logger name="springfox.documentation.spring.web" level="OFF" />
    <logger name="httpclient" level="error" />
    <logger name="org.apache.http.headers" level="error" />
    <logger name="org.apache.http.wire" level="error" />


    <root level="INFO_LEVEL">
        <appender-ref ref="DEBUG_FILE" />
        <appender-ref ref="INFO_FILE" />
        <appender-ref ref="ERROR_FILE" />

        <appender-ref ref="STDOUT" />
    </root>

</configuration>